
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTeacher() {
      let profilePath = /databases/$(database)/documents/userProfiles/$(request.auth.uid);
      return isSignedIn() && 
        exists(profilePath) && 
        get(profilePath).data.role == 'Teacher';
    }

    match /userProfiles/{userId} {
      // Basic profile reading allowed for everyone signed in (to show names in groups/leaderboards)
      allow get: if isSignedIn();
      // Teachers can list students, students can only list themselves
      allow list: if isSignedIn() && (request.auth.uid == userId || isTeacher());
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      match /focusSessions/{focusSessionId} {
        // Students can read focus sessions of others to see weekly totals on the leaderboard
        allow get, list: if isSignedIn(); 
        allow create, update, delete: if isOwner(userId);
      }

      match /coachProfiles/{profileId} {
        allow read: if isOwner(userId) || isTeacher();
        allow write: if isOwner(userId);
      }

      match /studyPlans/{planId} {
        allow read: if isOwner(userId) || isTeacher();
        allow write: if isOwner(userId);
      }
    }

    match /materials/{materialId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacher();
      allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    match /subjects/{subjectId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isTeacher();
    }

    match /studyGroups/{groupId} {
      // Optimized helper to check if user is member or teacher of the group
      function canAccessGroup() {
        let group = get(/databases/$(database)/documents/studyGroups/$(groupId)).data;
        // Check local membership/ownership first as it's more direct
        return (request.auth.uid in group.memberIds) || 
               (request.auth.uid == group.teacherId) || 
               isTeacher();
      }

      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Allow update for joining (adding self to memberIds)
      allow update: if isSignedIn(); 
      allow delete: if isSignedIn() && (isTeacher() || (request.auth.uid == resource.data.teacherId));

      match /messages/{messageId} {
        allow read: if isSignedIn() && canAccessGroup();
        allow create: if isSignedIn() && canAccessGroup();
        allow update, delete: if isSignedIn() && (isTeacher() || (request.auth.uid == resource.data.senderId));
      }
    }
  }
}
