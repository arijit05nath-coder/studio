
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTeacher() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'Teacher';
    }

    match /userProfiles/{userId} {
      allow get, list: if isSignedIn() && (request.auth.uid == userId || isTeacher());
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      match /focusSessions/{focusSessionId} {
        allow get, list: if isOwner(userId) || isTeacher();
        allow create, update, delete: if isOwner(userId);
      }

      match /coachProfiles/{profileId} {
        allow read: if isOwner(userId) || isTeacher();
        allow write: if isOwner(userId);
      }

      match /studyPlans/{planId} {
        allow read: if isOwner(userId) || isTeacher();
        allow write: if isOwner(userId);
      }
    }

    match /materials/{materialId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacher();
      allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    match /subjects/{subjectId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isTeacher();
    }

    match /studyGroups/{groupId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isTeacher() || (request.auth.uid in resource.data.memberIds));

      match /messages/{messageId} {
        // More efficient rule using denormalized memberIds
        allow read: if isSignedIn() && (
          isTeacher() || 
          (request.auth.uid in resource.data.memberIds)
        );
        allow create: if isSignedIn() && (request.resource.data.senderId == request.auth.uid);
        allow update, delete: if isSignedIn() && (isTeacher() || (request.auth.uid == resource.data.senderId));
      }
    }
  }
}
