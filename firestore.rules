
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTeacher() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'Teacher';
    }

    match /userProfiles/{userId} {
      allow get, list: if isSignedIn() && (request.auth.uid == userId || isTeacher());
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      match /focusSessions/{focusSessionId} {
        allow get, list: if isOwner(userId) || isTeacher();
        allow create, update, delete: if isOwner(userId);
      }

      match /coachProfiles/{profileId} {
        allow read: if isOwner(userId) || isTeacher();
        allow write: if isOwner(userId);
      }

      match /studyPlans/{planId} {
        allow read: if isOwner(userId) || isTeacher();
        allow write: if isOwner(userId);
      }
    }

    match /materials/{materialId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacher();
      allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    match /subjects/{subjectId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isTeacher();
    }

    match /studyGroups/{groupId} {
      // Helper to check if user is member or teacher of the group
      function canAccessGroup() {
        let group = get(/databases/$(database)/documents/studyGroups/$(groupId)).data;
        return isTeacher() || (request.auth.uid in group.memberIds) || (request.auth.uid == group.teacherId);
      }

      allow read, create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isTeacher() || (request.auth.uid in resource.data.memberIds));

      match /messages/{messageId} {
        // Allow reading messages if the user can access the group
        allow read: if isSignedIn() && canAccessGroup();
        // Allow creating messages if the user is a member/teacher
        allow create: if isSignedIn() && canAccessGroup();
        // Only the sender (or a teacher) can delete/update a message
        allow update, delete: if isSignedIn() && (isTeacher() || (request.auth.uid == resource.data.senderId));
      }
    }
  }
}
