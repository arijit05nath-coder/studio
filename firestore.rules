/**
 * FocusFlow Security Rules
 * 
 * Core Philosophy:
 * This ruleset implements a robust, multi-tiered authorization model designed for an 
 * educational environment. It prioritizes strict data ownership for students' personal 
 * records and role-based access control for curriculum management.
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTeacher() {
      return isSignedIn() && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'Teacher';
    }

    match /userProfiles/{userId} {
      // Allow owners to see their own data, and teachers to see all student data for monitoring
      allow get, list: if isOwner(userId) || isTeacher();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isOwner(userId);

      match /focusSessions/{focusSessionId} {
        allow get, list: if isOwner(userId) || isTeacher();
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      match /recommendations/{recommendationId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }
    }

    match /subjects/{subjectId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isTeacher();
    }

    match /topics/{topicId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isTeacher();
    }

    match /materials/{materialId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if resource != null && resource.data.teacherId == request.auth.uid;
    }

    match /studyGroups/{studyGroupId} {
      // Allow any authenticated user to view study group details and lists
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      // Only members or the monitoring teacher can update or delete group metadata
      allow update, delete: if resource != null && (request.auth.uid in resource.data.memberIds || request.auth.uid == resource.data.teacherId);

      match /messages/{messageId} {
        // Must be a member to read messages
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/studyGroups/$(studyGroupId)).data.memberIds;
        allow list: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/studyGroups/$(studyGroupId)).data.memberIds;
        allow create: if isSignedIn() && request.auth.uid in request.resource.data.memberIds;
      }
    }
  }
}