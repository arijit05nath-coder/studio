
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTeacher() {
      return isSignedIn() && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'Teacher';
    }

    match /userProfiles/{userId} {
      allow get, list: if isOwner(userId) || isTeacher();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      match /focusSessions/{focusSessionId} {
        allow get, list: if isOwner(userId) || isTeacher();
        allow create, update, delete: if isOwner(userId);
      }

      match /coachProfiles/{profileId} {
        allow read, write: if isOwner(userId);
      }

      match /studyPlans/{planId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /materials/{materialId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacher();
      allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    match /studyGroups/{groupId} {
      allow get, list, create: if isSignedIn();
      allow update, delete: if isSignedIn() && (request.auth.uid in resource.data.memberIds || isTeacher());

      match /messages/{messageId} {
        allow read, write: if isSignedIn();
      }
    }
  }
}
