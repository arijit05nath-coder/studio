
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user within the FocusFlow application.",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string" },
        "photoUrl": { "type": "string" },
        "educationalQualification": { "type": "string" },
        "dateCreated": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "firstName", "lastName", "email", "role", "dateCreated"]
    },
    "CoachProfile": {
      "title": "CoachProfile",
      "type": "object",
      "description": "Stores a student's self-assessment for AI study coaching.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "subjects": { "type": "array", "items": { "type": "string" } },
        "topics": { "type": "string" },
        "ratings": {
          "type": "object",
          "properties": {
            "conceptClarity": { "type": "number" },
            "problemSolving": { "type": "number" },
            "examReadiness": { "type": "number" }
          }
        },
        "learningStyle": { "type": "string" },
        "studyTime": {
          "type": "object",
          "properties": {
            "hoursPerDay": { "type": "number" },
            "preferredTime": { "type": "string" }
          }
        },
        "deadlines": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "StudyPlan": {
      "title": "StudyPlan",
      "type": "object",
      "description": "Stores AI-generated personalized study plans.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "planContent": {
          "type": "object",
          "properties": {
            "priorityTopics": { "type": "array", "items": { "type": "string" } },
            "strategy": { "type": "string" },
            "weeklyPlan": { "type": "string" },
            "actionableSteps": { "type": "array", "items": { "type": "string" } }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Subject": {
      "title": "Subject",
      "type": "object",
      "description": "Represents an academic subject.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "Material": {
      "title": "Material",
      "type": "object",
      "description": "Educational resource uploaded by teachers.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string" },
        "linkUrl": { "type": "string" },
        "subjectId": { "type": "string" },
        "teacherId": { "type": "string" },
        "author": { "type": "string" },
        "uploadDate": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "type", "linkUrl", "subjectId", "teacherId"]
    },
    "FocusSession": {
      "title": "FocusSession",
      "type": "object",
      "description": "Records the details of a student's focus session.",
      "properties": {
        "id": { "type": "string" },
        "studentId": { "type": "string" },
        "type": { "type": "string" },
        "plannedDurationMinutes": { "type": "number" },
        "actualDurationMinutes": { "type": "number" },
        "startTime": { "type": "string", "format": "date-time" },
        "endTime": { "type": "string", "format": "date-time" },
        "status": { "type": "string" },
        "interruptionCount": { "type": "number" },
        "strictModeUsed": { "type": "boolean" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/userProfiles/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "User profiles.",
          "params": [{ "name": "userId" }]
        }
      },
      {
        "path": "/userProfiles/{userId}/coachProfiles/{profileId}",
        "definition": {
          "entityName": "CoachProfile",
          "schema": { "$ref": "#/backend/entities/CoachProfile" },
          "description": "Student weakness assessments.",
          "params": [{ "name": "userId" }, { "name": "profileId" }]
        }
      },
      {
        "path": "/userProfiles/{userId}/studyPlans/{planId}",
        "definition": {
          "entityName": "StudyPlan",
          "schema": { "$ref": "#/backend/entities/StudyPlan" },
          "description": "AI generated study plans.",
          "params": [{ "name": "userId" }, { "name": "planId" }]
        }
      },
      {
        "path": "/subjects/{subjectId}",
        "definition": {
          "entityName": "Subject",
          "schema": { "$ref": "#/backend/entities/Subject" },
          "description": "Academic subjects list.",
          "params": [{ "name": "subjectId" }]
        }
      },
      {
        "path": "/materials/{materialId}",
        "definition": {
          "entityName": "Material",
          "schema": { "$ref": "#/backend/entities/Material" },
          "description": "Educational materials uploaded by teachers.",
          "params": [{ "name": "materialId" }]
        }
      }
    ]
  }
}
